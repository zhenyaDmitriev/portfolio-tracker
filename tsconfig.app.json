{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,          
    "esModuleInterop": true, 
    "skipLibCheck": true,    
    "sourceMap": true,       
    "types": ["node"],       
    "moduleResolution": "node",
    "resolveJsonModule": true  
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"              
  ],
  "exclude": [
    "node_modules",            
    "**/*.spec.ts"             
  ]
}
